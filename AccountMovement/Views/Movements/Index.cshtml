@model IEnumerable<AccountMovement.Entities.Movement>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MovementDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MovementType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MovementValue)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MovementBalance)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Account)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MovementDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MovementType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MovementValue)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MovementBalance)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Account.AccountID)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.MovementID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.MovementID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.MovementID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
